rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own profile and any other user's profile
      allow read: if isSignedIn();

      // Users can only create/update their own profile
      allow create, update: if isOwner(userId);

      // Prevent deletion of user profiles
      allow delete: if false;
    }

    // Waffles collection
    match /waffles/{waffleId} {
      // Anyone authenticated can read waffles
      allow read: if isSignedIn();

      // Users can only create waffles with their own userId
      allow create: if isSignedIn() &&
                      request.resource.data.userId == request.auth.uid;

      // Users can update/delete their own waffles
      allow update, delete: if isSignedIn() &&
                               resource.data.userId == request.auth.uid;
    }

    // Replies collection
    match /replies/{replyId} {
      // Users can read replies sent to them or sent by them
      allow read: if isSignedIn() &&
                    (resource.data.toUserId == request.auth.uid ||
                     resource.data.fromUserId == request.auth.uid);

      // Users can create replies from their own account
      allow create: if isSignedIn() &&
                      request.resource.data.fromUserId == request.auth.uid;

      // Users can delete their own sent replies
      allow delete: if isSignedIn() &&
                      resource.data.fromUserId == request.auth.uid;
    }
  }
}
